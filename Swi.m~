
mag = niftiread('/Users/jonathan/Desktop/s_20200609_Gris7hjarna/Pig7mge3d.nii/MG/image003.nii');
phase = niftiread('/Users/jonathan/Desktop/s_20200609_Gris7hjarna/Pig7mge3d.nii/PH/image003.nii');
mag = rot90_3D(mag, 1, 1);
phase = rot90_3D(phase, 1, 1);

comp = mag.*exp(i*(phase + pi));


s = 512;
z = 512;

filter = hanning(120)*hanning(120)';

pad = (s-120)/2;

filter = padarray(filter, [pad pad]);

for o = 1:z
    lpslice = ifft2(fft2(comp(:,:,o)).*fftshift(filter));
    hpcomp(:,:,o) = comp(:,:,o)./lpslice;
end

